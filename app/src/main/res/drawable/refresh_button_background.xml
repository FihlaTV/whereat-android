<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/refresh_map_button_background"
    >

    <item android:state_pressed="false">
        <shape android:shape="rectangle" >
            <size
                android:height="@dimen/clear_map_button_width"
                android:width="@dimen/clear_map_button_radius" />
            <solid android:color="@color/glyphicon_background_not_pressed" />
            <corners android:radius="@dimen/clear_map_button_corner_radius" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <size
                android:height="@dimen/clear_map_button_width"
                android:width="@dimen/clear_map_button_radius" />
            <solid android:color="@color/glyphicon_background_pressed" />
            <corners android:radius="@dimen/clear_map_button_corner_radius" />
        </shape>
    </item>
</selector>